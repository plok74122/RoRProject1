<% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
      <% end %>
    </ul>
<% end %>

<%= form_for @book do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>

  <%= f.label :description, "Description" %>
  <%= f.text_area :description %>

  <%= f.label :isbn, "ISBN" %>
  <%= f.text_field :isbn %>

  </br>
  <%= f.label :publish_date, "出版日期" %>
  <%= f.date_select :publish_date %>
  </br>
  <%= f.label :onBoard_datetime, "上架日期" %>
  <%= f.datetime_select :onBoard_datetime %>

  <%= f.submit %>
<% end %>

<ul>
<% @books.each do |book| %>
  <li>
    <%= book.name %>
    <%= link_to 'Show', book_path(book, :page => params[:page]) %>
    <%= link_to 'Edit', edit_book_path(book, :page => params[:page]) %>
    <%= link_to 'Delete', book_path(book, :page => params[:page]), :method => :delete, :data => {:confirm => "你確定?"} %>
  </li>
<% end %>
<%= paginate @books %>

</ul>
<%= link_to 'New Book', new_book_path %>

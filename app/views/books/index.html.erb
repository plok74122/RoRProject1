<table>
<% @books.each do |book| %>
  <tr>
    <td><%= book.name %></td>
    <td><%= link_to 'Show', book_path(book, :page => params[:page]) %></td>
    <td><%= link_to 'Edit', edit_book_path(book, :page => params[:page]) %></td>
    <td><%= link_to 'Delete', book_path(book, :page => params[:page]), :method => :delete, :data => {:confirm => "你確定?"} %></td>
  </tr>
<% end %>
</table>
<%= paginate @books %>
<%= form_for Book.new , :url => books_path do |f| %>
    <%= render :partial => 'form', locals: { f: f, book: @book } %>

    </br>
    <%= f.label :publish_date, "出版日期" %>
    <%= f.date_select :publish_date %>
    </br>
    <%= f.label :onBoard_datetime, "上架日期" %>
    <%= f.datetime_select :onBoard_datetime %>

    <%= f.submit "Create" %>
<% end %>

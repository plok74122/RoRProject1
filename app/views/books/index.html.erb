<table>
<% @books.each do |book| %>
  <tr>
    <td><%= book.name %></td>
    <td><%= link_to 'Show', book_path(book, :page => params[:page]) %></td>
    <td><%= link_to 'Edit', edit_book_path(book, :page => params[:page]) %></td>
    <td><%= link_to 'Delete', book_path(book, :page => params[:page]), :method => :delete, :data => {:confirm => "你確定?"} %></td>
  </tr>
<% end %>
</table>
<%= paginate @books %>
<%= render :partial => 'form' %>

